@model IEnumerable<Product>
@{
    ViewData["Title"] = "GetProductByProductType";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-90">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div class="shop-p">
                        <!--Founded Result & Gird/List-->
                        <div class="shop-p__toolbar u-s-m-b-30">

                            <div class="shop-p__tool-style">
                                <div class="tool-style__group u-s-m-b-8">

                                    <span class="js-shop-grid-target is-active">Grid</span>

                                    <span class="js-shop-list-target">List</span>
                                </div>
     
                            </div>
                        </div>
                        <div class="shop-p__collection">
                            <div class="row is-grid-active">
                                <!-- product Card-->
                                @foreach (var product in Model)
                                {
                                    <div class="col-lg-3 col-md-6 col-sm-6">
                                        <div class="product-m">
                                            <div class="product-m__thumb">

                                                <a class="aspect aspect--bg-grey aspect--square u-d-block" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Productid">

                                                    <img class="aspect__img" src=@Url.Content("~/ProductImages/" + product.Imagepath) alt="">
                                                </a>
                                                <div class="product-m__quick-look">

                                                    <a class="fas fa-search" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Productid"></a>
                                                </div>
   
                                            </div>
                                            <div class="product-m__content">
@*                                                 <div class="product-m__category">

                                                    <a href="shop-side-version-2.html">@product.ProductTypeName</a>
                                                </div> *@
                                                <div class="product-m__name">

                                                    <a href="product-detail.html">@product.Name</a>
                                                </div>
                
                                                <div class="product-m__price">$@product.Price</div>
                                                <div class="product-m__hover">
                                                    <div class="product-m__preview-description">
                                                        @{
                                                            string description = product.Description;
                                                            string truncatedDescription = description.Length <= 150 ? description : description.Substring(0, 150) + " ...";
                                                        }
                                                        @if (truncatedDescription.Length > 0)
                                                        {
                                                            <span>@truncatedDescription</span>
                                                        }

                                                    </div>
                                                    <div class="product-m__wishlist">

                                                        <a class="far fa-heart" href="#" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist"></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                        <div class="u-s-p-y-60">

                            <!--====== Pagination ======-->
                            <ul class="shop-p__pagination">
                                <li class="is-active">

                                    <a href="shop-side-version-2.html">1</a>
                                </li>
                                <li>

                                    <a href="shop-side-version-2.html">2</a>
                                </li>
                                <li>

                                    <a href="shop-side-version-2.html">3</a>
                                </li>
                                <li>

                                    <a href="shop-side-version-2.html">4</a>
                                </li>
                                <li>

                                    <a class="fas fa-angle-right" href="shop-side-version-2.html"></a>
                                </li>
                            </ul>
                            <!--====== End - Pagination ======-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
</div>



