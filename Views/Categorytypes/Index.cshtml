            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorytypename)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorytypeid)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorytypename)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Categorytypeid">Edit</a> |
